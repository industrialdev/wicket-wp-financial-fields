{
    "name": "estebanforge/hyperpress",
    "description": "Supercharge WordPress with the power of hypermedia. Use HTMX, Alpine Ajax, and Datastar to create rich, interactive blocks and pagesâ€”all with the simplicity of PHP.",
    "type": "wordpress-plugin",
    "version": "3.0.4",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Esteban Cuevas",
            "email": "esteban@actitud.xyz"
        }
    ],
    "minimum-stability": "RC",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../HyperFields",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "php": ">=8.1",
        "starfederation/datastar-php": "^1.0",
        "estebanforge/hyperfields": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "pestphp/pest": "^4",
        "pestphp/pest-plugin-browser": "^4",
        "brain/monkey": "^2"
    },
    "scripts": {
        "test": "php -d pcov.enabled=1 vendor/bin/pest --colors=always",
        "test:unit": "php -d pcov.enabled=1 vendor/bin/pest --testsuite=Unit --colors=always",
        "test:integration": "php -d pcov.enabled=1 vendor/bin/pest --testsuite=Integration --colors=always",
        "test:feature": "php -d pcov.enabled=1 vendor/bin/pest --testsuite=Feature --colors=always",
        "test:coverage": "php -d pcov.enabled=1 vendor/bin/pest --coverage-html coverage-html --coverage-text",
        "test:fast": "php -d pcov.enabled=1 vendor/bin/pest --coverage-html coverage-html --coverage-text",
        "test:summary": "php -d pcov.enabled=1 vendor/bin/pest --coverage-text",
        "test:clover": "php -d pcov.enabled=1 vendor/bin/pest --coverage-clover coverage.xml",
        "test:setup": "php setup-sqlite-db.php",
        "test:xdebug": "XDEBUG_MODE=coverage vendor/bin/pest --coverage-html coverage-xdebug-html --coverage-text",
        "test:coverage:xdebug": "XDEBUG_MODE=coverage vendor/bin/pest --coverage-html coverage-xdebug-html --coverage-text",
        "test:summary:xdebug": "XDEBUG_MODE=coverage vendor/bin/pest --coverage-text",
        "test:clover:xdebug": "XDEBUG_MODE=coverage vendor/bin/pest --coverage-clover coverage-xdebug.xml",
        "cs:fix": "php-cs-fixer fix",
        "dump-autoload-prod": "@php composer dump-autoload --optimize --no-dev",
        "dump-autoload-dev": "@php composer dump-autoload",
        "production": [
            "@cs-fix",
            "@dump-autoload-prod"
        ],
        "post-install-cmd": [
            "@cs-fix",
            "@dump-autoload-prod",
            "php .ci/setup-sqlite-dropin.php"
        ],
        "post-update-cmd": [
            "@cs-fix",
            "@dump-autoload-prod",
            "php .ci/setup-sqlite-dropin.php"
        ],
        "version-bump": "php .ci/version-bump.php"
    },
    "autoload": {
        "psr-4": {
            "HyperPress\\": "src/"
        },
        "files": [
            "bootstrap.php"
        ],
        "exclude-from-classmap": [
            "**/vendor/starfederation/datastar-php/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperPress\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "pestphp/pest-plugin": true
        }
    }
}
